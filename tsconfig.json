{
  "extends": "./tsconfig.build.json",

  "compilerOptions": {
    "rootDir": "./",
    "baseUrl": ".",
    "paths": {
      "@test/*": ["test/*"],
      "@mocks/*": ["__mocks__/*"]
    }
  },
  "exclude": [
    "node_modules",
    "dist",
    "build",
    "**/build",
    "**/dist",
    "**/node_modules",
    "cdk.out",
    "**/cdk.out"
  ]
}
